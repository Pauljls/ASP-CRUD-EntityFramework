@model List<Comentario>
<div class="flex justify-content-center align-content-center" style="width=100%; height=100%">
    <h1>Usuarios</h1>
    @foreach (var comentario in Model)
    {
        <div class="card flex-row justify-content-center" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary"> @Html.DisplayFor(m => comentario.IdUsuarioNavigation.Nombre)</h6>
                <p class="card-text">@Html.DisplayFor(m => comentario.Contenido)</p>
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>

    }
    <a class="btn btn-primary" asp-action="Create">Agregar</a>

</div>
